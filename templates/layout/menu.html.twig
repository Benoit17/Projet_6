{% block stylesheets %}
    <link href="{{ asset('style/css/menu.css') }}" rel="stylesheet">
    <link href="{{ asset('style/css/login.css') }}" rel="stylesheet">
{% endblock %}

<span class="nav-top-border"></span>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('homepage') }}">
        <img src="{{ asset('img/logo.png') }}" width="120" height="50" alt="logo_rivsourires">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a id="association" class="nav-link" href="{{ path('homepage') }}" style="color: #FF99CC;">L'association</a>
                <img src="{{ asset('img/menu/pink.png') }}" alt="pelotte_laine_rose">
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" style="color: #AFE177;">Partciper</a>
                <img src="{{ asset('img/menu/green.png') }}" alt="pelotte_laine_rose">
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('news') }}" style="color: #FFD455;">Actualités</a>
                <img src="{{ asset('img/menu/yellow.png') }}" alt="pelotte_laine_rose">
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("homepage") }}#contact" style="color: #FF5555;">Contact</a>
                <img src="{{ asset('img/menu/red.png') }}" alt="pelotte_laine_rose">
            </li>
            {% if not is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="#connexionModal" data-toggle="modal" data-target="#connexionModal" style="color: #89B7D8;">Connexion</a>
                    <img src="{{ asset('img/menu/blue.png') }}" alt="pelotte_laine_bleue">
                </li>
            {% else %}
                <li class="{% if adminMenu is defined %}active{% endif %} nav-item">
                    <a class="nav-link" href="{{ path('admin') }}" style="color: #BDCACA;"><span class="glyphicon glyphicon-cog"></span> Administration</a>
                    <img src="{{ asset('img/menu/grey.png') }}" alt="pelotte_laine_grise">
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}" style="color: #89B7D8;">Déconnexion</a>
                    <img src="{{ asset('img/menu/blue.png') }}" alt="pelotte_laine_bleue">
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="modal fade" id="connexionModal" tabindex="-1" role="dialog" aria-labelledby="connexionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="well row">
                    <div class="col-sm-4 order-2 order-sm-1 cnx-infos-section">
                        <div class="contactInfos" style="text-align: center">
                            <h4>Contact & Infos</h4>
                            <div><i class="fa fa-phone-square" aria-hidden="true"></i><p>01 75 72 15 18</p></div>
                            <div><i class="fa fa-home" aria-hidden="true"></i><p>5 rue des pardrix, 75002 Paris</p></div>
                            <div><i class="fa fa-envelope" aria-hidden="true"></i><p>infos@nao.org</p></div>
                        </div>
                    </div>
                    <div class="col-sm-8 align-items-center order-1 order-sm-2 cnx-form-section">
                        <div class="row justify-content-between">
                            <h3 style="margin-left: 35%;" class="modal-title" id="connexionModalLabel">Connexion</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="align-items-center">
                            <div class="flash-msg-cnx"></div>
                            <form action="{{ path('login') }}" method="post" class="form-gr" id="connexion-form">
                                <div class="form-group">
                                    <label for="username">Nom d'utilisateur :</label>
                                    <input type="text" id="username" name="_username" class="form-control" placeholder="Saississez votre nom d'utilisateur" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Mot de passe :</label>
                                    <input type="password" id="password" name="_password" class="form-control" placeholder="Saississez votre nom d'utilisateur" />
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn btn-default ">Se connecter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    <script src="{{ asset('js/login.js') }}"></script>
{% endblock %}